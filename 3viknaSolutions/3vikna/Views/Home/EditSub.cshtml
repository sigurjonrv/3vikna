@model _3vikna.Models.EditSub
@{
    ViewBag.Title = "EditSub";
}

<h2>Breyta skjátexta</h2>
@Html.Partial("navigationbar")


@using (Html.BeginForm())
{
    <ul class="list-group">
        <li class="list-group-item">
            <span class="badge" id="sub">14</span>
            @for (int i = 0; i < Model.lines.Length; i++)
            {
                @Html.Raw(Model.lines[i] + "<br/>");
                
                if(Model.lines[i].Length > 2)
                {
                    if (Model.lines[i].First() == '\n')
                    {
                        if (!Model.lines[i].Substring(1,1).All(Char.IsDigit))
                        {
                            <div class="foo">
                                @Html.EditorFor(model => Model.lines[i], new { size = 1000});
                                @Html.ValidationMessageFor(model => Model.lines[i])
                                @Html.Raw("<br />")</div>   
                        }
                    }
                }

            }
            <input type="submit" value="Senda" class="btn btn-default" />
@Html.ActionLink("Vista", "EditSub", "Home", new {model = Model.lines})
        </ul>
}

