        </div>
    </div>

    <div id="navbar">
        <ul>
            <li><span class="item1">@Html.ActionLink("Beiðni", "Request", "Home")</span></li>
            <li><span class="item2">@Html.ActionLink("Skjátexti", "ScreenText", "Home")</span></li>
            <li><span class="item3"><a href="#">Prófíll</a></span></li>
            <li><span class="item4">@Html.ActionLink("Hjálp", "Contact", "Home")</span></li>

        </ul>
    </div>
    <div id="search"> 
        <p>
            <form>
                Leita:
                <input type="text" name="search" size="40" value="" />
                <select>
                    <option value="0">(Öllum flokkum)</option>
                    <option value="1">Kvikmyndir</option>
                    <option value="2">Þættir</option>
                    <option value="3">Annað</option>
                </select>
                <b>Birta: </b>
                Ókláraðar Þýðingar <input type="checkbox" name="oklarad" value="4" /> 
                Ísl Texta <input type="checkbox" name="Islenska" value="5" /> 
                Eng Texta <input type="checkbox" name="Enska" value="6" /> 
                <input type="button" value="Leita!" />
            </form>
        </p>

